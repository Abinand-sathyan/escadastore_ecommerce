<!doctype html>
<html lang="en">
  <head>
  	<title>Sign Up 09</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="/user/UserSignupAssets/css/style.css">

	</head>
	<body class="img" style="background-image: url(/user/UserSignupAssets/images/slide-01.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-7 col-lg-5">
					<div class="login-wrap">
		      	<h3 class="text-center mb-4">Create Your Account</h3>
						<form action="register" class="signup-form" method="post">
		      		<div class="form-group mb-3">
		      			<label class="label" for="name">First Name</label>
		      			<input type="text" class="form-control" placeholder="John Doe" name="first_name">
		      			<span class="icon fa fa-user-o"></span>
		      		</div>
					<div class="form-group mb-3">
						<label class="label" for="name">Last Name</label>
						<input type="text" class="form-control" placeholder="John Doe" name="last_name">
						<span class="icon fa fa-user-o"></span>
					</div>
		      		<div class="form-group mb-3">
		      			<label class="label" for="email">Email Address</label>
		      			<input type="text" class="form-control" placeholder="johndoe@gmail.com" name="email_address">
		      			<span class="icon fa fa-paper-plane-o"></span>
		      		</div>
	            <div class="form-group mb-3">
	            	<label class="label" for="password">Password</label>
	              <input id="password" type="password" class="form-control" placeholder="Password" name="password">
	              <span toggle="#password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
	              <span class="icon fa fa-lock"></span>
	            </div>
	            <div class="form-group mb-3">
	            	<label class="label" for="password"> conform Password</label>
	              <input id="password-confirm" type="password" class="form-control" placeholder="Password" name="confirm_password">
	              <span toggle="#password-confirm" class="fa fa-fw fa-eye field-icon toggle-password"></span>
	              <span class="icon fa fa-lock"></span>
	            </div>
				<div class="form-group mb-3">
	            	<label class="label" for="password">Mobile Number</label>
	              <input id="password-confirm" type="number" class="form-control" placeholder="mobile number" name="mobile_number">
	              <span toggle="#password-confirm" class="fa fa-fw fa-eye field-icon toggle-password"></span>
	              <span class="icon fa fa-lock"></span>
	            </div>
				<% if(PassMatchERR.length>0){ %> 
					<div class=" alert alert-danger" role="alert">
					  <p class="text-danger"><%=PassMatchERR %> </p>
					</div>
					<% } else if (EmailExist.length>0) { %>
						<div class=" alert alert-danger" role="alert">
							<p class="text-danger"><%=EmailExist %> </p>
						  </div>
					  <% } %> 
	            <div class="form-group">
	            	<button type="submit" class="form-control btn btn-primary submit px-3">Sign Up</button>
	            </div>
	          </form>
	          <p>I'm already a member! <a data-toggle="tab" href="#signin">Sign In</a></p>
	        </div>
				</div>
			</div>
		</div>
	</section>

	<script src="/user/UserSignupAssets/js/jquery.min.js"></script>
  <script src="/user/UserSignupAssets/js/popper.js"></script>
  <script src="/user/UserSignupAssets/js/bootstrap.min.js"></script>
  <script src="/user/UserSignupAssets/js/main.js"></script>

	</body>
</html>