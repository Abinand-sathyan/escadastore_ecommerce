<%- include('partials/adminheader.ejs') %>
<div class="row">
  <a href="/admin/getaddcategory" style="width: 100%; "><button type="button" class="btn btn-primary" style="width: 100%;height: 3rem;">Add Category</button></a>
  </div>
<div class="row ">
  <div class="col-12 grid-margin">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Category List</h4>
        <div class="table-responsive">
          <table class="table">
            <thead>
                <tr>
                <th> Category name</th>
                <th> offer</th>
                <th> images</th>
                <th> Date </th>
                </tr>
            </thead>
            <tbody>
              <% for( let i = 0;i<categorydata.length; i++ ) { %>
                <tr>
                <td>
              <span class="pl-2"><%-categorydata[i].CategoryName %> </span>
                </td>
                <td>
                  <span class="pl-2"><%-categorydata[i].offer %> </span>
                    </td>
                <td> <img src="/images/<%-categorydata[i].ImageURL[0].filename %>"/></td>
                <td><%-categorydata[i].createdAt %>  </td>
                <td>
                <a href="/admin/categoryDelete/<%-categorydata[i]._id %>"><button type="button" class="btn btn-outline-danger">Delete</button></a>
              </td>
              <td>
                <a href="/admin/categoryEdit/<%-categorydata[i]._id %>"> <button type="button" class="btn btn-outline-success">Edit</button></a>
              </td>
              </tr>
             <% } %>
             </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
  <%- include('partials/adminfooter.ejs') %>